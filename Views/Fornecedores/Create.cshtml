@model CadastroFornecedores.Models.Fornecedor

@{
    Layout = "_Layout";
}
<script src="~/js/getEndereco.js" asp-append-version="true"></script>
<h4 class="mt-4">Novo Fornecedor</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" required />
                <div class="valid-feedback">
                    Parece bom!
                </div>
                <div class="invalid-feedback">
                    Por favor, preencha o nome.
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cnpj" class="control-label">CNPJ</label>
                <input asp-for="Cnpj" class="form-control" required />
                <div class="valid-feedback">
                    Parece bom!
                </div>
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especialidade" class="control-label">Especialidade</label>
                <select asp-for="Especialidade" class="form-control" required>
                    <option value="">Selecione uma Especialidade</option>
                    <option value="Comercio">Comércio</option>
                    <option value="Servico">Serviço</option>
                    <option value="Industria">Indústria</option>
                </select>
                <span asp-validation-for="Especialidade" class="text-danger"></span>
                <div class="valid-feedback">
                    Parece bom!
                </div>
                <div class="invalid-feedback">
                    Por favor, selecione uma especialidade.
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Cep" class="control-label">CEP</label>
                <input asp-for="Cep" class="form-control" id="cep" required />
                <div class="valid-feedback">
                    Parece bom!
                </div>
                <div class="invalid-feedback">
                    Por favor, preencha o CEP.
                </div>
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label">Endereço</label>
                <input asp-for="Endereco" class="form-control" id="endereco" required />
                <div class="valid-feedback">
                    Parece bom!
                </div>
                <div class="invalid-feedback">
                    Por favor, preencha o endereço.
                </div>
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-2">Criar</button>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
